#include <stdio.h>

int climbstairs(int n) {
    if (n == 1) {
        return 1;
    }
    if (n == 2) {
        return 2;
    }
    
    int one_step_back = 1; 
    int two_steps_back = 2; 
    
    int total_ways = 0;

    for (int i = 3; i <= n; i++) {
        total_ways = one_step_back + two_steps_back;
        
        one_step_back = two_steps_back;
        two_steps_back = total_ways;
    }

    return total_ways;
}

int main() {
    int n1 = 2;
    int res1 = climbstairs(n1);
    printf("Input n = %d, Output: %d\n", n1, res1); 

    printf("----------\n");
    
    int n2 = 3;
    int res2 = climbstairs(n2);
    printf("Input n = %d, Output: %d\n", n2, res2); 

    printf("----------\n");

    int n3 = 5;
    int res3 = climbstairs(n3);
    printf("Input n = %d, Output: %d\n", n3, res3); 

    return 0;
}
